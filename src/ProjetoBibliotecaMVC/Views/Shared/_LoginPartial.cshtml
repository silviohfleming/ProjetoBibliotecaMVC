@using Microsoft.AspNetCore.Identity
@using ProjetoBibliotecaMVC.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <!--<a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage"><i class="glyphicon glyphicon-user"></i> @UserManager.GetUserName(User)!</a>-->
                <a asp-area="" asp-controller="" asp-action="" title="Manage"><i class="glyphicon glyphicon-user"></i> @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link"><i class="glyphicon glyphicon-log-out"></i> Sair</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register"><i class="glyphicon glyphicon-asterisk"></i> Registrar</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login"><i class="glyphicon glyphicon-log-in"></i> Entrar</a></li>
    </ul>
}
