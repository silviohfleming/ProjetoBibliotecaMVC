@model IEnumerable<ProjetoBibliotecaMVC.Models.Livro>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model == null || Model.Count() == 0)
{
    <br />
    <h3>Carrinho está vazio</h3>

}
else
{
    <br />
    <form asp-action="EmprestarLivros">
        <input type="submit" value="Emprestar Livros" class="btn btn-success" />
    </form>

}

<br />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Capa</th>
            <th>Produto</th>
            <th>Quantidade</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img class="card-img-top" src="~/@item.Foto" width="80px"></td>
                <td>@item.Titulo</td>
                <td>@item.Quantidade</td>
            </tr>
        }
    </tbody>
</table>

<a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-default">Voltar</a>
